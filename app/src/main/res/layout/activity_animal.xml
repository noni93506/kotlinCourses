<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AnimalActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.fragments.view.AnimalActivity">
        <TextView
            android:id="@+id/animalAnimalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.info}"
            tools:text="dog1 barked 2 times.."
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/animalShoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/shout"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>